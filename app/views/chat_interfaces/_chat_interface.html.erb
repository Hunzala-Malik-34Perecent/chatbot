<div id="<%= dom_id chat_interface %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= chat_interface.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this chat interface", chat_interface, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this chat interface', edit_chat_interface_path(chat_interface), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
