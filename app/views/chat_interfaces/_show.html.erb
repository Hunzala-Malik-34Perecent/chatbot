<div class="mx-auto w-full h-full flex">
    <div class="mx-auto max-w-lg px-6 ">
      <ul role="list" class="overflow-y-auto max-h-[48vh] flex flex-col-reverse">
        <%= turbo_stream_from "#{dom_id(chat_interface)}_messages" %>
        <div id="<%= dom_id(chat_interface) %>_messages">
          <%= render chat_interface.messages %>
        </div>
      </ul>
      <%= render partial: "messages/form", locals: { chat_interface: chat_interface } %>
    </div>
</div>